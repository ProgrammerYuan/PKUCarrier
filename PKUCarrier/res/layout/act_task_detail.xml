<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
		android:background="@color/grey_light">
	<LinearLayout
			android:id="@+id/act_post_detail2_post_header"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_margin="12dp"
			android:background="@drawable/shape_roundrect_solid_whte_r8"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:paddingLeft="16dp"
			android:layout_weight="1">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="16dp"
				android:orientation="horizontal">

			<com.makeramen.RoundedImageView
					android:id="@+id/item_post2_owner_portrait"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_marginRight="16dp"
					android:scaleType="centerCrop"
					android:src="@drawable/avatar3"
					app:border_color="@color/white"
					app:border_width="0dp"
					app:corner_radius="24dp"
					app:mutate_background="true"/>

			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="48dp">

				<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

					<TextView
							android:id="@+id/item_post2_owner_name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="王钰翔"
							android:maxWidth="120dp"
							android:singleLine="true"
							android:ellipsize="end"
							android:textSize="16sp"
							android:textColor="@color/black_40"/>

				</RelativeLayout>

				<TextView
						android:id="@+id/item_post2_time"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentBottom="true"
						android:text=""
						android:textSize="13sp"
						android:textColor="@color/black_75"/>

				<TextView
						android:id="@+id/item_post2_owner_info"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentBottom="true"
						android:singleLine="true"
						android:layout_toRightOf="@+id/item_post2_time"
						android:text="北京大学"
						android:textSize="13sp"
						android:textColor="@color/black_75"/>

			</RelativeLayout>

		</LinearLayout>

		<TextView
				android:id="@+id/item_post2_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginRight="16dp"
				android:text="取货窗口:圆通\n交接时间:今天下午\n交接地点:二教门口\n附言:圆通窗口的帮忙取一下,谢啦~"
				android:textColor="@color/black_40"
				android:textSize="16dp"/>
	</LinearLayout>
	<LinearLayout
			android:id="@+id/btn_ll"
			android:layout_width="fill_parent"
			android:layout_height="48dp"
			android:orientation="horizontal"
			android:layout_weight="0"
			android:layout_marginBottom="12dp"
			android:weightSum="2">
		<LinearLayout
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:layout_weight="1"
				android:gravity="center">
			<ImageView
					android:id="@+id/item_deny"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="10dp"
					android:src="@drawable/icon_delete"
					android:background="@drawable/shape_circle_red"/>
		</LinearLayout>
		<LinearLayout
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:layout_weight="1"
				android:gravity="center">
			<ImageView
					android:id="@+id/item_get"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="10dp"
					android:src="@drawable/icon_ok"
					android:background="@drawable/shape_circle_green"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>