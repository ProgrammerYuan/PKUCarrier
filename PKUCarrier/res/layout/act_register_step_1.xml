<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
	<ImageView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:scaleType="centerCrop"
			android:src="@drawable/bg_test_blur"/>

	<LinearLayout
			android:id="@+id/act_register_main"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:gravity="center_horizontal">
		<com.makeramen.RoundedImageView
				android:id="@+id/act_register_avatar"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_marginTop="72dp"
				android:src="@drawable/avatar3"
				android:scaleType="centerCrop"
				app:oval="true"
				app:border_width="0dp"/>
		<!--<ImageView-->
				<!--android:layout_width="220dp"-->
				<!--android:layout_height="40dp"-->
				<!--android:layout_marginTop="72dp"-->
				<!--android:scaleType="fitXY"-->
				<!--android:src="@drawable/logo_white"/>-->
		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginLeft="60dp"
				android:layout_marginRight="60dp"
				android:layout_marginTop="24dp"
				android:orientation="vertical">
			<RelativeLayout
					android:id="@+id/act_register_username_ll"
					android:layout_width="fill_parent"
					android:layout_height="40dp">
				<ImageView
						android:id="@+id/act_register_icon_user"
						android:layout_width="32dp"
						android:layout_height="32dp"
						android:padding="4dp"
						android:src="@drawable/button_me_nav"
						android:layout_centerVertical="true"/>
				<EditText
						android:id="@+id/act_register_username_et"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_marginLeft="8dp"
						android:layout_toRightOf="@+id/act_register_icon_user"
						android:background="@color/trans"
						android:singleLine="true"
						android:hint="请输入用户名"
						android:maxLength="11"
						android:textColor="@color/white"
						android:textColorHint="@color/grey_hint_light"/>
				<ImageView
						android:id="@+id/act_register_user_divider"
						android:layout_width="fill_parent"
						android:layout_height="1px"
						android:layout_alignParentBottom="true"
						android:scaleType="fitXY"
						android:src="@color/white"/>
			</RelativeLayout>
			<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="40dp"
					android:layout_marginTop="12dp">
				<ImageView
						android:id="@+id/act_register_icon_phone"
						android:layout_width="32dp"
						android:layout_height="32dp"
						android:padding="4dp"
						android:src="@drawable/register_button_telephone"
						android:layout_centerVertical="true"/>
				<EditText
						android:id="@+id/act_register_phone_et"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_marginLeft="8dp"
						android:layout_toRightOf="@+id/act_register_icon_phone"
						android:background="@color/trans"
						android:inputType="phone"
						android:numeric="integer"
						android:singleLine="true"
						android:hint="请输入学号"
						android:maxLength="11"
						android:textColor="@color/white"
						android:textColorHint="@color/grey_hint_light"/>
				<ImageView
						android:id="@+id/act_register_phone_divider"
						android:layout_width="fill_parent"
						android:layout_height="1px"
						android:layout_alignParentBottom="true"
						android:scaleType="fitXY"
						android:src="@color/white"/>
			</RelativeLayout>
			<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="40dp"
					android:layout_marginTop="12dp">
				<ImageView
						android:id="@+id/act_register_icon_pwd"
						android:layout_width="32dp"
						android:layout_height="32dp"
						android:padding="4dp"
						android:layout_centerVertical="true"
						android:src="@drawable/register_button_password"/>
				<EditText
						android:id="@+id/act_register_pwd_et"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_marginLeft="8dp"
						android:layout_toRightOf="@+id/act_register_icon_pwd"
						android:background="@color/trans"
						android:inputType="textPassword"
						android:singleLine="true"
						android:hint="请输入密码"
						android:textColor="@color/white"
						android:textColorHint="@color/grey_hint_light"/>
				<ImageView
						android:id="@+id/act_register_pwd_divider"
						android:layout_width="fill_parent"
						android:layout_height="1px"
						android:layout_alignParentBottom="true"
						android:scaleType="fitXY"
						android:src="@color/white"/>
			</RelativeLayout>
		</LinearLayout>
	</LinearLayout>
	<ImageView
			android:id="@+id/act_register_next"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="28dp"
			android:scaleType="fitXY"
			android:src="@drawable/login_button_finish"
			android:layout_centerHorizontal="true"/>
</RelativeLayout>