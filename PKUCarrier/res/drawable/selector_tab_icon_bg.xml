	<item android:state_focused = "true">
		<shape android:shape = "oval">
			<solid android:color = "@color/main_1_dark" />
		</shape>

	</item>
	<item android:state_selected = "true">
		<shape android:shape = "oval">
			<solid android:color = "@color/main_1" />
		</shape>

	</item>
	<item android:state_pressed = "true">
		<shape android:shape = "oval">
			<solid android:color = "@color/main_1_dark" />
		</shape>

	</item>
	<item>
		<shape android:shape = "oval">
			<solid android:color = "@color/trans" />
			<stroke android:width = "0.5dp" android:color = "@color/main_1" />
		</shape>
	</item>
</selector>