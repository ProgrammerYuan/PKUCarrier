<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android = "http://schemas.android.com/apk/res/android">
	<item android:state_pressed = "true">
		<layer-list>
			<item>
				<shape>
					<corners android:radius = "6dp" />
					<solid android:color = "@color/trans" />
					<stroke android:width = "1dp" android:color = "@color/main_1" />
				</shape>

			</item>
			<item>
				<shape>
					<corners android:radius = "6dp" />
					<solid android:color = "@color/trans_25" />
				</shape>
			</item>
		</layer-list>
	</item>
	<item android:state_focused = "true">
		<layer-list>
			<item>
				<shape>
					<corners android:radius = "6dp" />
					<solid android:color = "@color/trans" />
					<stroke android:width = "1dp" android:color = "@color/main_1" />
				</shape>

			</item>
			<item>
				<shape>
					<corners android:radius = "6dp" />
					<solid android:color = "@color/trans_25" />
				</shape>
			</item>
		</layer-list>
	</item>
	<item android:state_selected = "true">
		<layer-list>
			<item>
				<shape>
					<corners android:radius = "6dp" />
					<solid android:color = "@color/trans" />
					<stroke android:width = "1dp" android:color = "@color/main_1" />
				</shape>

			</item>
			<item>
				<shape>
					<corners android:radius = "6dp" />
					<solid android:color = "@color/trans_25" />
				</shape>
			</item>
		</layer-list>

	</item>
	<item>
		<shape>
			<corners android:radius = "6dp" />
			<solid android:color = "@color/trans" />
			<stroke android:width = "1dp" android:color = "@color/main_1" />
		</shape>
	</item>
</selector>